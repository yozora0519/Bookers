<h2>Editing Book</h2>
<% if @book.errors.any? %>
<div>
  <h3><%= @book.errors.count %>error prohibited this book from being saved:</h3>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<%= form_with model: @book,url: book_path(@book.id),method: :patch do |b| %>
<div>
  <label>Title</label>
  <%= b.text_field :title %>
</div>
<div>
  <label>Body</label>
  <%= b.text_area :body %>
</div>
<%= b.submit "Update Book" %>
<% end %>

<%= link_to "Show", book_path(@book.id) %>
<%= link_to "Back", books_path %>