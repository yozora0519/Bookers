<h1>Books</h1>
<table>
  <tr>
    <th>Title</th>
    <td>Body</td>
  </tr>
  <% @books.each do |b| %>
  <tr>
    <th><%= b.title %></th>
    <td><%= b.body %></td>
    <td><%= link_to "Show", book_path(b.id) %></td>
    <td><%= link_to "Edit", edit_book_path(b.id) %></td>
    <td><%= link_to "Destroy", book_path(b.id), method: :delete %></td>
  </tr>
  <% end %>
</table>

<h2>New book</h2>
<% if @book.errors.any? %>
<div>
  <h3><%= @book.errors.count %>error prohibited this book from being saved:</h3>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<%= form_with model: @book,url: books_path,method: :post do |b| %>
    <div>
      <label>Title</label>
      <%= b.text_field :title %>
    </div>
    <div>
      <label>Body</label>
      <%= b.text_area :body %>
    </div>
    <%= b.submit "Create Book" %>
  <% end %>